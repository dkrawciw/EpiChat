<%- include("partials/header.ejs") %>

  <div class="chatDisplay">
    <img class="newRoomBtn" src="newProjectIcon.png" id="newRoom">
    <div id="newRoomDiv">
      <form action="/home/newRoom" method="POST">
        <div class="form-group">
          <label for="rName">Create New Room</label>
          <input name="name" type="text" id="rName" class="form-control chatInp" style="text-align: center; float: left; position: absolute;">
        </div>
        <button class="btn authenticateBtn" style="float: right;">Create</button>
      </form>
    </div>
    <ul class="list-group">
      <% for(var x = chatRoom.length - 1; x >= 0; x--){ %>
        <li class="list-group-item list-group-item-action" onclick="window.location='/home/chat/<%= chatRoom[x].room_id %>';"><%= chatRoom[x].title %></li>
      <% } %>
    </ul>
  </div>
  <script type="text/javascript" src="/newRoom.js"></script>
<%- include("partials/footer.ejs") %>
