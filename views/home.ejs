<%- include("partials/header.ejs") %>
  <div class="chatSelectionDiv">
    <ul class="list-group">
      <% for(var x = chatRoom.length - 1; x >= 0; x--){ %>
        <li class="list-group-item list-group-item-action list-group-item-primary" onclick="window.location='/home/chat/<%= chatRoom[x].room_name %>';"><%= chatRoom[x].room_name %></li>
      <% } %>
    </ul>
  </div>
  <div class="chatDisplay">
    <img class="newRoomBtn" src="newProjectIcon.png" id="newRoom">
    <div id="newRoomDiv">
      <h2>Create New Room</h2>
      <form action="/home/newRoom" method="POST">
        <div class="input-group mb-3 input-group-lg">
          <input type="text" class="form-control"  name="name" aria-label="Recipient's username" aria-describedby="button-addon2" id="rName">
          <div class="input-group-append">
            <button class="btn btn-outline-danger" type="submit" id="button-addon2">Create</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <script type="text/javascript" src="/newRoom.js"></script>
<%- include("partials/footer.ejs") %>
